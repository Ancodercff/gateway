<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blueocn.api.repository.mapper.KeyStoreRepo">

    <insert id="add" parameterType="KeyStoreEntity" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO `KEY_STORE` (
                `USER_ID`,
                `KEY_TYPE`,
                `KEY_VALUE`
            ) VALUES (
                #{userId},
                #{keyType},
                #{keyValue}
            )
        ]]>
    </insert>

    <insert id="insert" parameterType="list" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO `KEY_STORE` (
                `USER_ID`,
                `KEY_TYPE`,
                `KEY_VALUE`
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
        <![CDATA[
            (
                #{item.userId},
                #{item.keyType},
                #{item.keyValue}
            )
        ]]>
        </foreach>
    </insert>

    <delete id="delete" parameterType="long">
        DELETE FROM `KEY_STORE` WHERE `ID` = #{id}
    </delete>

    <update id="update" parameterType="KeyStoreEntity">
        UPDATE `KEY_STORE`
        <include refid="setCondition"/>
        WHERE `ID` = #{id}
    </update>

    <select id="query" parameterType="KeyStoreEntity" resultMap="keyStoreResultMap">
        SELECT <include refid="selectColumns"/> FROM `KEY_STORE`
        <include refid="whereCondition"/>
    </select>

    <select id="queryOne" parameterType="long" resultMap="keyStoreResultMap">
        SELECT <include refid="selectColumns"/>
        FROM `KEY_STORE` WHERE `ID` = #{id}
    </select>

    <sql id="setCondition">
        <set>
            <if test="userId != null">
                <![CDATA[ `USER_ID` = #{userId}, ]]>
            </if>
            <if test="keyType != null">
                <![CDATA[ `KEY_TYPE` = #{keyType}, ]]>
            </if>
            <if test="createdDate != null">
                <![CDATA[ `CREATE_DATE` = #{createdDate}, ]]>
            </if>
            <if test="keyValue != null">
                <![CDATA[ `KEY_VALUE` = #{keyValue}, ]]>
            </if>
        </set>
    </sql>

    <sql id="whereCondition">
        <where>
            <if test="id != null and id != ''">
                <![CDATA[  AND `ID` = #{id} ]]>
            </if>
            <if test="userId != null">
                <![CDATA[  AND `USER_ID` = #{userId} ]]>
            </if>
            <if test="keyType != null">
                <![CDATA[  AND `KEY_TYPE` = #{keyType} ]]>
            </if>
            <if test="createdDate != null">
                <![CDATA[  AND `CREATE_DATE` = #{createdDate} ]]>
            </if>
            <if test="keyValue != null">
                <![CDATA[  AND `KEY_VALUE` = #{keyValue} ]]>
            </if>
        </where>
    </sql>

    <sql id="selectColumns">
        `ID` ,`USER_ID`, `KEY_TYPE`, `CREATE_DATE`, `KEY_VALUE`
    </sql>

    <resultMap id="keyStoreResultMap" type="KeyStoreEntity">
        <id property="id" column="ID"/>
        <result property="userId" column="USER_ID"/>
        <result property="keyType" column="KEY_TYPE"/>
        <result property="createdDate" column="CREATE_DATE"/>
        <result property="keyValue" column="KEY_VALUE"/>
    </resultMap>
</mapper>
